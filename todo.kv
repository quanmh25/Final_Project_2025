<TodoScreen>:
    orientation: 'vertical'
    task_input: task_input
    tasks_container: tasks_container

    TextInput:
        id: task_input
        hint_text: "Nhập task mới"
        size_hint_y: None
        height: 40

    Button:
        text: "Thêm"
        size_hint_y: None
        height: 40
        on_press: root.add_task(self)

    ScrollView:
        BoxLayout:
            id: tasks_container
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
